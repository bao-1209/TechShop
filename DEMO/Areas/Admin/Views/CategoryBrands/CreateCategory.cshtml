
@{
    ViewBag.Title = "CreateCategory";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2 class="mb-5">Thêm danh mục</h2>

<form action="@Url.Action("CreateCategory", "CategoryBrands", new {area = "Admin"})" method="post">
    @Html.AntiForgeryToken()
    <div class="row mt-5">
        <div class="col-md-6">
            <label for="category_name">Tên danh mục</label>
            <input type="text"
                   class="form-control"
                   id="category_name"
                   name="category_name" />
        </div>
    </div>
    <button type="submit" class="btn btn-success my-2">Tạo</button>
    <a href="@Url.Action("Index", "CategoryBrands", new {area = "Admin"})" class="btn btn-dark">Hủy</a>
</form>


