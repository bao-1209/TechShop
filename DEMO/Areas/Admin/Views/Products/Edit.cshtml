@model DEMO.Models.Product
@{
    ViewBag.Title = "Chỉnh sửa";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2 class="mb-5">Chỉnh sửa sản phẩm</h2>

<form action="@Url.Action("Edit", "Products", new {area = "Admin"})" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()
    <input type="hidden" name="product_id" value="@Model.product_id" />
    <div class="row mt-5">
        <div class="col-md-6 mb-2">
            <label for="category_id">Danh mục</label>
            <select class="form-control"
                    id="category_id"
                    name="category_id">
                @foreach (var category in ViewBag.Categories)
                {
                    <option value="@category.category_id" @(category.category_id == Model.category_id ? "selected" : "")>
                        @category.category_name
                    </option>
                }
            </select>
        </div>

        <div class="col-md-6 mb-2">
            <label for="brand_id">Thương hiệu</label>
            <select class="form-control"
                    id="brand_id"
                    name="brand_id">
                @foreach (var brand in ViewBag.Brands)
                {
                    <option value="@brand.brand_id" @(brand.brand_id == Model.brand_id ? "selected" : "")>
                        @brand.brand_name
                    </option>
                }
            </select>
        </div>

        <div class="col-md-6 mb-2">
            <label for="product_name">Tên sản phẩm</label>
            <input type="text"
                   class="form-control"
                   id="product_name"
                   name="product_name"
                   value="@Model.product_name" />
        </div>

        <div class="col-md-6 mb-2">
            <label for="product_description">Mô tả</label>
            <input type="text"
                   class="form-control"
                   id="product_description"
                   name="product_description"
                   value="@Model.product_description" />
        </div>

        <div class="col-md-6 mb-2">
            <label for="product_price">Giá</label>
            <input type="number"
                   class="form-control"
                   id="product_price"
                   name="product_price"
                   value="@Model.product_price" />
        </div>

        <div class="col-md-6 mb-2">
            <label for="uploadImage">Hình ảnh</label>
            <input type="file"
                   class="form-control"
                   id="uploadImage"
                   name="uploadImage"
                   accept="image/*" />
        </div>

        <div class="col-md-6 mb-2">
            <label for="product_quantity">Tồn kho</label>
            <input type="text"
                   class="form-control"
                   id="product_quantity"
                   name="product_quantity"
                   value="@Model.product_quantity" />
        </div>
    </div>
    <button type="submit" class="btn btn-success my-2">Lưu</button>
    <a href="@Url.Action("Index", "Products", new {area = "Admin"})" class="btn btn-dark">Hủy</a>
</form>
